<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.percent.PercentRelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:layout_heightPercent="32%"
        android:background="@color/baseColor"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/wrapper">
        <ImageView app:layout_widthPercent="32%"
            app:layout_heightPercent="55%"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            android:id="@+id/air_switch"
            android:src="@mipmap/air_on"/>
        <LinearLayout
            android:layout_width="match_parent"
            app:layout_heightPercent="25%"
            app:layout_marginRightPercent="2%"
            android:layout_toRightOf="@id/air_switch"
            app:layout_marginLeftPercent="6%"
            android:orientation="horizontal"
            android:id="@+id/temp_panel">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/set_temp"/>
            <EditText
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:textColor="@color/white"
                android:focusable="true"
                android:inputType="number"
                android:focusableInTouchMode="true"
                android:id="@+id/input_set_temp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="@string/temp_unit"/>
            <TextView
                app:layout_marginLeftPercent="10%"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/room_temp"/>
            <TextView
                app:layout_marginLeftPercent="5%"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textColor="@color/control_selected"
                android:textSize="14sp"
                android:id="@+id/room_temp_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="6%"
            app:layout_marginTopPercent="10%"
            app:layout_marginRightPercent="4%"
            android:orientation="horizontal"
            android:id="@+id/mode_panel"
            android:layout_toRightOf="@id/air_switch"
            android:background="@drawable/control_panel"
            android:layout_below="@id/temp_panel">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cold_mode"
                android:background="@drawable/left_outline"
                android:id="@+id/to_cold"
                android:textColor="@color/control_name"
                android:textSize="16sp"
                android:clickable="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/to_hot"
                android:clickable="true"
                android:background="@drawable/medium_outline"
                android:textColor="@color/control_name"
                android:textSize="16sp"
                android:text="@string/hot_mode"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/to_dehumidify"
                android:clickable="true"
                android:textColor="@color/control_name"
                android:textSize="16sp"
                android:background="@drawable/right_outline"
                android:text="@string/dehumidify"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="12%"
            android:orientation="horizontal"
            android:id="@+id/speed_panel"
            app:layout_marginLeftPercent="6%"
            app:layout_marginRightPercent="4%"
            android:background="@drawable/control_panel"
            android:layout_toRightOf="@id/air_switch"
            android:layout_below="@id/mode_panel">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/low_speed"
                android:id="@+id/to_low"
                android:background="@drawable/left_outline"
                android:textColor="@color/control_name"
                android:textSize="16sp"
                android:clickable="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/medium_speed"
                android:id="@+id/to_medium"
                android:background="@drawable/medium_outline"
                android:textColor="@color/control_name"
                android:textSize="16sp"
                android:clickable="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/high_speed"
                android:id="@+id/to_high"
                android:background="@drawable/right_outline"
                android:textColor="@color/control_name"
                android:textSize="16sp"
                android:clickable="true"/>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/baseColor"
        android:layout_below="@id/wrapper">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/ensure"
            android:clickable="true"
            android:id="@+id/ensure"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cancel"
            android:id="@+id/cancel"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:clickable="true"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>