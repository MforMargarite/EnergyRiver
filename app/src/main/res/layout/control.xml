                <!--场景模式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_marginLeftPercent="5%"
                    app:layout_marginRightPercent="5%"
                    android:id="@+id/scene_menu">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/scene_mode"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/air_control"
                        android:id="@+id/scene_edit"
                        android:clickable="true"/>
                </LinearLayout>
                <com.whucs.energyriver.Widget.ScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:paddingTop="24dp"
                    android:paddingBottom="12dp"
                    android:verticalSpacing="24dp"
                    android:id="@+id/scene_info"
                    android:listSelector="@android:color/transparent"
                    android:background="@color/dark_base_color"
                    android:layout_below="@id/scene_menu"/>
                <!--组控模式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_marginLeftPercent="5%"
                    app:layout_marginRightPercent="5%"
                    android:id="@+id/group_menu"
                    android:layout_below="@id/scene_info">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/group_control_mode"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/air_control"
                        android:id="@+id/group_edit"
                        android:clickable="true"/>
                </LinearLayout>
                <com.whucs.energyriver.Widget.ScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:paddingTop="24dp"
                    android:paddingBottom="12dp"
                    android:verticalSpacing="24dp"
                    android:id="@+id/group_control"
                    android:background="@color/dark_base_color"
                    android:listSelector="@android:color/transparent"
                    android:layout_below="@id/group_menu"/>
                <com.whucs.energyriver.Widget.ScrollListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loop_listView"
                    android:divider="@null"
                    android:layout_below="@id/group_control" />
        </android.support.percent.PercentRelativeLayout>
    </ScrollView>
</LinearLayout>