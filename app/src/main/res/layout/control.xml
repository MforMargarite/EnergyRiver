        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gradient_end"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrapper">
        <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
