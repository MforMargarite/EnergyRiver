<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baseColor">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/navbg"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/control"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="12dp"
            android:layout_gravity="end"
            android:src="@mipmap/menu"
            android:layout_marginRight="24dp"
            android:id="@+id/menu"
            android:clickable="true"/>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gradient_end"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginBottomPercent="1.5%"
            android:id="@+id/room_info"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/place"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/room"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gradient_end"
            android:layout_below="@id/room_info"/>
        <!--GridView: wrap content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/room_info"
                android:layout_marginTop="1dp"
                android:orientation="vertical">
                <com.whucs.energyriver.Widget.ScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:verticalSpacing="24dp"
                    android:id="@+id/scene_info"/>
                <com.whucs.energyriver.Widget.ScrollListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loop_listView"
                    android:divider="@null"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
    </ScrollView>
</LinearLayout>