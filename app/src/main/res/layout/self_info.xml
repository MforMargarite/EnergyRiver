<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/self_info"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:id="@+id/back"/>
    </android.support.v7.widget.Toolbar>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/avatar_panel"
        android:clickable="true"
        android:background="@color/colorPrimary"
        app:layout_marginTopPercent="5%">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="7%"
            android:text="@string/avatar"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="15%"
            app:layout_heightPercent="10%"
            app:layout_marginLeftPercent="7%"
            app:layout_marginRightPercent="3%"
            app:layout_marginTopPercent="2%"
            app:layout_marginBottomPercent="2%"
            android:id="@+id/avatar"
            android:layout_toLeftOf="@+id/arrow"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="7%"
            android:src="@mipmap/arrow"
            android:id="@+id/arrow"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_panel"
        android:id="@+id/name_panel"
        android:clickable="true"
        android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="7%"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_marginBottomPercent="5%"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="7%"
            app:layout_marginRightPercent="3%"
            app:layout_marginTopPercent="4%"
            app:layout_marginBottomPercent="4%"
            android:id="@+id/username"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/arrow1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="7%"
            android:src="@mipmap/arrow"
            android:id="@+id/arrow1"
            app:layout_marginBottomPercent="5%"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>