<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/edit_sub"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="24dp"
            android:id="@+id/save"
            android:text="@string/save"
            android:clickable="true"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:id="@+id/back"/>
    </android.support.v7.widget.Toolbar>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/sub_username"
        android:background="@color/colorPrimary"
        app:layout_marginTopPercent="5%">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="3%"
            android:text="@string/sub_username"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%"
            app:layout_marginLeftPercent="5%"
            android:textColor="@color/white"
            android:src="@mipmap/arrow"
            android:textSize="14sp"
            android:hint="@string/input_sub_username"
            android:textColorHint="@color/white"
            android:id="@+id/sub_username_value"
            android:background="@null"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_username"
        android:id="@+id/work_num"
        android:background="@color/colorPrimary"
        app:layout_marginTopPercent="1%">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="3%"
            android:text="@string/work_num"
            android:textColor="@color/white"/>
        <EditText
            app:layout_widthPercent="30%"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%"
            app:layout_marginLeftPercent="5%"
            android:textColor="@color/white"
            android:src="@mipmap/arrow"
            android:textSize="14sp"
            android:hint="@string/input_work_num"
            android:textColorHint="@color/light_grey"
            android:id="@+id/work_num_value"
            android:background="@null"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_num"
        android:background="@color/colorPrimary"
        app:layout_marginTopPercent="3%"
        android:id="@+id/room">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="3%"
            android:textSize="14sp"
            android:text="@string/choose_room"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="3%"
            android:textSize="14sp"
            android:id="@+id/room_value"
            android:textColor="@color/white"/>
    </android.support.percent.PercentRelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/building"
        android:layout_below="@id/work_num"
        app:layout_marginTopPercent="2%"/>
</android.support.percent.PercentRelativeLayout>