<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/navbg"
        android:alpha="0.32">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:id="@+id/toolbar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/control"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_gravity="end"
                android:src="@mipmap/menu"
                android:layout_marginRight="24dp"
                android:id="@+id/menu"
                android:clickable="true"/>
        </android.support.v7.widget.Toolbar>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="1.5%"
                app:layout_marginBottomPercent="1.5%"
                android:id="@+id/room_info"
                android:clickable="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/place"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/room"
                    android:text="EnergyRiver大厦 - 1楼 - 001室"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/white"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/add"
                    android:id="@+id/add_scene"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gradient_end"
                android:layout_below="@id/room_info"/>
            <!--GridView: wrap content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/room_info"
                    android:id="@+id/scene_info"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"/>
                    <com.whucs.energyriver.Widget.CircleView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="上班"
                        android:gravity="center"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"/>
                    <com.whucs.energyriver.Widget.CircleView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="下班"
                        android:gravity="center"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"/>
                    <com.whucs.energyriver.Widget.CircleView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="会议"
                        android:gravity="center"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"/>
                </LinearLayout>
                <com.whucs.energyriver.Widget.ScrollListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/loop_listView"
                    android:divider="@null"
                    android:layout_below="@+id/scene_info"
                    android:layout_marginTop="16dp"/>
            </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:orientation="vertical"
            app:layout_widthPercent="80%"
            android:layout_height="wrap_content"
            android:background="@drawable/authority_outline"
            android:gravity="center"
            android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_VIP"
                    android:textColor="@color/auth_text_grey"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/authority_grey"
                    android:layout_marginTop="18dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:background="@drawable/authority_cancel_outline"
                    android:textColor="@color/auth_text_grey"
                    android:id="@+id/auth_cancel"
                    android:text="@string/auth_cancel"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/auth_ensure"
                    android:id="@+id/auth_ensure"
                    android:paddingTop="8dp"
                    android:textSize="12sp"
                    android:background="@drawable/authority_ensure_outline"
                    android:textColor="@color/white"
                    android:paddingBottom="8dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentFrameLayout>